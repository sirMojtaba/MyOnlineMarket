<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.myonlinemarket.ui.cart.CartFragment"
        android:label="@string/title_sale"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.example.myonlinemarket.ui.category.CategoriesFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_categories" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myonlinemarket.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.myonlinemarket.ui.ProductDetailFragment"
        android:label="ProductDetailFragment" >
        <argument
            android:name="productId"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_productDetailFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
</navigation>